{
  "name": "react-generic-table",
  "version": "1.0.0",
  "description": "Easily &amp; Beautifully create scroll transitions in react!",
  "homepage": "https://alianza.github.io/react-generic-table/",
  "author": "alianza",
  "license": "MIT",
  "repository": "alianza/react-generic-table",
  "main": "dist/index.jsx",
  "module": "dist/index.modern.js",
  "source": "src/index.jsx",
  "engines": {
    "node": ">=16.0.0 <=17.0.0"
  },
  "scripts": {
    "dev": "run-p start tailwindcss",
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "tailwindcss": "npx tailwindcss -i ./src/main.css -o ./dist/index.css --watch",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "publishToNpm": "run-s build && npm publish"
  },
  "dependencies": {
    "@babel/plugin-proposal-unicode-property-regex": "^7.18.6",
    "@formkit/auto-animate": "^0.8.0",
    "@heroicons/react": "^2.0.18"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.54.9",
    "tailwindcss": "^3.3.3"
  },
  "files": [
    "dist"
  ]
}
